# Database (MySQL)
DB_HOST=localhost
DB_NAME=hillmeet
DB_USER=
DB_PASS=
DB_CHARSET=utf8mb4

# App URL (no trailing slash) â€“ used for OAuth redirects and links
APP_URL=https://your-domain.com

# Set to "local" for login diagnostics and optional debug logging
# APP_ENV=local

# Session & security
SESSION_LIFETIME=7200
SESSION_COOKIE=hillmeet_session
ENCRYPTION_KEY=32-byte-hex-key-for-tokens-and-pins

# SMTP (e.g. IONOS)
SMTP_HOST=smtp.ionos.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@your-domain.com
SMTP_FROM_NAME=Hillmeet

# Google (Identity + Calendar)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=${APP_URL}/auth/google/callback

# Rate limits (requests per window)
RATE_PIN_REQUEST=3
RATE_PIN_ATTEMPT=5
RATE_POLL_CREATE=5
RATE_VOTE=20
RATE_INVITE=10
RATE_CALENDAR_CHECK=10

# Free/busy cache TTL (seconds)
FREEBUSY_CACHE_TTL=600
